<hr class="featurette-divider">

      
<div class="row secondary-content"> 
  <!---Two-Col layout below --->
  <div class="col-md-9 secondary-main-content" style="background-color:blue">
          <!-- START THE FEATURETTES -->

      <div class="row featurette">
        <div class="col-md-7">
          <h2 class="featurette-heading">First featurette heading. <span class="text-muted">It'll blow your mind.</span></h2>
          <p class="lead">Donec ullamcorper nulla non metus auctor fringilla. Vestibulum id ligula porta felis euismod semper. Praesent commodo cursus magna, vel scelerisque nisl consectetur. Fusce dapibus, tellus ac cursus commodo.</p>
        </div>
        <div class="col-md-5">
          <img class="featurette-image img-responsive" data-src="holder.js/500x500/auto"c alt="Generic placeholder image"> </img>
        </div>
      </div>

      <!---<hr class="featurette-divider">--->
    <!---Main Column--->
    <!---<div style="background-color:red"> HELLLOOO</div>--->
  </div>
  <div class="col-md-1"> </div>
  <div class="col-md-3 secondary-side-content" style="background-color:red">
    <div class="row">
    <div class="col-md-12">
      <h3>What's New</h3>
    </div>
    <div class="col-md-12">
      <% if @news.first != nil %>
        <div class="wide-item">
          <% n = @news.first %>
              
          <% if n.featured_media_id != nil %>
            <a href='<%= news_path n %>'>
              <div class="news_featured_image">
                <% mo = MediaObject.find(n.featured_media_id) %> 
                <div class="item-image" style="<%= "background-image:url(#{mo.src})"%>"></div>
              </div>
            </a>
          <% end %>
              
          <div class="item-desc">
            <span class="item_title"><%= n.title %></span><br/>
            <span style="font-size:0.8em">Written on <%=n.created_at.strftime("%B %d, %Y")%></span><br/><br/>
            <div class="news_description"><%= n.summary%><br/> </div>
            <div class="article_link"> <%= link_to "Read More", news_path(n) %> </div>
          </div>
        </div>
      <% end %>
    </div>
    <div id="stats-div" class="col-md-12 stats-div">
      <div class="item">
        <div class="item-desc">
          <span class="item_title">Statistics</span><br/><br/>
          <b><%=User.count%> users</b> registered<br/>
          <b><%=DataSet.count%> datasets</b> contributed<br/>
          <b><%=Project.count%> projects</b> created<br/>
        </div>
      </div>
    </div>
    <!---Side Column --->
    <!---<div style="background-color:red"> WORLLDDD</div>--->
  </div>
</div>























<div class="visible-lg visible-md">
  <div class="row">
    <% if @featured_vis != nil%>
      <div class="visible-desktop">
        <div class="col-md-4">
          <h2><%= link_to @featured_vis.title, visualization_path(@featured_vis)%></h2>
          <b>Created: </b><%= time_ago_in_words(@featured_vis.created_at)%> ago, on <%=@featured_vis.created_at.strftime("%B %d, %Y")%><br />
          <b>From Project: </b><%= link_to @featured_vis.project.title, project_path(@featured_vis.project)%><br />
          <b>By: </b><%= link_to @featured_vis.owner.name, user_path(@featured_vis.owner)%>
          <%= raw @featured_vis.content %>
          <br />
          <a href="visualizations" class="btn btn-primary">See More Visualizations</a>
        </div>
        <div class="col-md-8">
          <iframe scrolling="no" style="width:100%;height:400px;border:0px;" src="/visualizations/<%=@featured_vis.id%>?presentation=true"></iframe>
        </div>
      </div>
    <%end%>
  </div>
    
  <div class="row">
    <div class="col-md-12">
      <h3>Featured Projects</h3>
    </div>
        
    <% @featured_projects.each do |i| %>
      <% @box_project = i %>
      <%= render "shared/project_box" %>
    <% end %> 
  </div>
    
  <div class="row">
    <div class="col-md-12">
      <h3>Curated Projects</h3>
    </div>
    <% @curated_projects.each do |i| %>
      <% @box_project = i %>
      <%= render "shared/project_box" %>
    <% end %>
  </div>
    
  <div class="row">
    <div class="col-md-12">
      <h3>What's New</h3>
    </div>
    <div class="col-md-6">
      <% if @news.first != nil %>
        <div class="wide-item">
          <% n = @news.first %>
              
          <% if n.featured_media_id != nil %>
            <a href='<%= news_path n %>'>
              <div class="news_featured_image">
                <% mo = MediaObject.find(n.featured_media_id) %> 
                <div class="item-image" style="<%= "background-image:url(#{mo.src})"%>"></div>
              </div>
            </a>
          <% end %>
              
          <div class="item-desc">
            <span class="item_title"><%= n.title %></span><br/>
            <span style="font-size:0.8em">Written on <%=n.created_at.strftime("%B %d, %Y")%></span><br/><br/>
            <div class="news_description"><%= n.summary%><br/> </div>
            <div class="article_link"> <%= link_to "Read More", news_path(n) %> </div>
          </div>
        </div>
      <% end %>
    </div>
   
    <div class="col-md-3">
      <div class="item">
        <div class="item-desc">
          <span class="item_title">Statistics</span><br/><br/>
          <b><%=User.count%> users</b> registered<br/>
          <b><%=DataSet.count%> datasets</b> contributed<br/>
          <b><%=Project.count%> projects</b> created<br/>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="visible-xs visible-sm">
  <%if @featured_projects.first != nil%>
    <% i = @featured_projects.first %>
    <div>
      <%if i.featured_media_id != nil%>
        <%= link_to image_tag(MediaObject.find(i.featured_media_id).src, :style=>'max-height:150px; float:right; padding: 5px;'), project_path(i) %>
      <% end %>
      <h4><%= link_to i.title, project_path(i) %></h4>
      <span style="font-weight:bold">Owner:</span> <%= link_to i.owner.name, user_path(i.owner) %><br/>
      <span style="font-weight:bold">Created:</span> <%= i.to_hash(false)[:timeAgoInWords] %> ago
      <div style="margin-top:20px;"><%= mobileParse(i) %></div>
      <br><a href="projects" class="btn btn-primary">See More Projects</a>
    </div>
  <%end%>  
